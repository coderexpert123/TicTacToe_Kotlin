            android:layout_height="200dp">

        </Button>


        <Button
            android:layout_width="match_parent"
            android:id="@+id/btn5"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="200dp">

        </Button>


        <Button
            android:layout_width="match_parent"
